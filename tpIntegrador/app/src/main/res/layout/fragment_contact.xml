<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context=".ContactFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="324dp"
            android:src="@drawable/fondo_contacto"
            android:background="#000000"
            android:padding="1dp"/>

        <TextView
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Donde Juego?"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Llamar a un complejo deportivo e intentar reservar es cosa del pasado. Nuestra app te ofrece un sistema innovador para estar mas actualizado que nunca. Podras reservar canchas sin costo ni perdidas de tiempo."
            android:textColor="@color/black"
            />

        <TextView
            android:layout_marginTop="60dp"
            android:textSize="22sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Aplicaciones Móviles"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Nicolas Acuña - Christian Botta"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>